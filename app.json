{
  "expo": {
    "name": "MP3Player by Thomas Ash",
    "slug": "mp3player",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.thomasash.mp3player",
      "infoPlist": {
        "UIBackgroundModes": ["audio"],
        "NSHumanReadableCopyright": "© 2025 Thomas Ash. All rights reserved."
      }
    },
    "android": {
      "package": "com.thomasash.mp3player"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow MP3Player to access your microphone."
        }
      ]
    ],
    "extra": {
      "author": "Thomas Ash",
      "copyright": "© 2025 Thomas Ash. All rights reserved."
    }
  }
}